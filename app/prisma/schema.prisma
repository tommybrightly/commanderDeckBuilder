generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts    Account[]
  sessions    Session[]
  collections Collection[]
  decks       Deck[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Card {
  id             String   @id @default(cuid())
  oracleId       String   @unique // Scryfall oracle card ID
  name           String
  manaCost       String?
  cmc            Int      @default(0)
  colors         String   // JSON array e.g. ["W","U"]
  colorIdentity  String   // JSON array
  typeLine       String
  oracleText     String?
  legalities     String?  // JSON object
  imageUrl       String?
  updatedAt      DateTime @updatedAt

  collectionItems CollectionItem[]
}

model Collection {
  id        String   @id @default(cuid())
  userId    String
  name      String
  rawInput  String   // Original pasted or uploaded data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  decks            Deck[]
  collectionItems  CollectionItem[]
}

model CollectionItem {
  id           String @id @default(cuid())
  collectionId String
  cardId       String
  quantity     Int    @default(1)

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  card       Card       @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([collectionId, cardId])
}

model Deck {
  id               String   @id @default(cuid())
  userId           String
  collectionId     String?
  commanderName    String
  legalityEnforced Boolean  @default(true)
  data             Json     // Serialized DeckList
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  collection Collection? @relation(fields: [collectionId], references: [id])
}

